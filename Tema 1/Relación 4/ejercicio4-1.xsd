<?xml version="1.0" encoding="UTF-8">
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
<xs: element name="biblioteca">
    <xs: complexType>
        <xs: sequence>
            <xs: name="titulo" type="xs:string"/>
            <xs:simpleType>
                <xs: restriction base="xs:string">
                     <xs:maxLength value="100"/>
                </xs:restriction>
            </xs:simpleType>
            <xs: name="autor" type="xs:string"/>
            <xs:simpleType>
                <xs: restriction base="xs:string">
                    <xs:pattern value="[A-Z].*"/>
                </xs: restriction>
            </xs:simpleType>

            <xs: name="anioPublicacion" type="xs:string"/>  
            <xs: name="genero" type="xs:string"/> 
            <xs: name="isbn" type="xs:string"/> 
        </xs: sequence>
    </xs: complexType>
</xs:element>

</xs:schema>